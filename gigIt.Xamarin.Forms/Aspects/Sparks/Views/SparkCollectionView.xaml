<?xml version="1.0" encoding="UTF-8"?>
<CollectionView xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:g="clr-namespace:gigIt.Xamarin"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="gigIt.Xamarin.Forms.Views.SparkCollectionView">
    <CollectionView.ItemTemplate>
        <DataTemplate>
            <StackLayout Padding="10" BackgroundColor="{Static g:gigItColors.bodyBG}" WidthRequest="250">
                <Label Text="{Binding Title}" TextColor="{Static g:gigItColors.bodyFG}" FontSize="16"/>
                <Label Text="{Binding Notes}" TextColor="{Static g:gigItColors.bodyFG}" FontSize="13"
                       LineBreakMode="WordWrap" />
            </StackLayout>
        </DataTemplate>
    </CollectionView.ItemTemplate>
</CollectionView>