<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:g="clr-namespace:gigIt.Xamarin"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="gigIt.Xamarin.Forms.Views.SparkTileView">
    <ViewCell.View>
        <StackLayout Padding="10">
            <Label Text="{Binding Spark.Title}" TextColor="{Static g:gigItColors.bodyFG}"
                            LineBreakMode="NoWrap" 
                            Style="{DynamicResource ListItemTextStyle}" 
                            FontSize="16" />
            <Label Text="{Binding Spark.Notes}" TextColor="{Static g:gigItColors.bodyFG}"
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemDetailTextStyle}"
                            FontSize="13" />
        </StackLayout>
    </ViewCell.View>
</ViewCell>