<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gigIt.Xamarin.Forms.Views.ItemDetailPage">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Title:" FontSize="Small" />
        <Label Text="{Binding Item.Title}" FontSize="Title"/>
        <Label Text="Notes:" FontSize="Small" />
        <Label Text="{Binding Item.Description}" FontSize="Subtitle"/>
    </StackLayout>
</ContentPage>